<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MapButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="71dp"
        android:text="상권 분석\n - 지도  -"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/StaticButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StaticButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="72dp"
        android:text="가맹점 분석\n - 통계  -"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/DataRoomButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MapButton" />

    <Button
        android:id="@+id/mentoringButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="110dp"
        android:text="멘토링"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DataRoomButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/DataRoomButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="72dp"
        android:text="자료실"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/mentoringButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StaticButton" />


</androidx.constraintlayout.widget.ConstraintLayout>